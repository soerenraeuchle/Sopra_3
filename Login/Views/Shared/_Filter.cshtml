@model Login.Models.Filter

@{
    Layout = "";
}

@using (Ajax.BeginForm("Filtern", "AngeboteManager", new AjaxOptions() { UpdateTargetId = "stellenangebotUebersicht", InsertionMode = InsertionMode.Replace }))
{
    @Html.DropDownListFor(model => model.institut, (IEnumerable<SelectListItem>)ViewData["Institute"])
    @Html.DropDownListFor(model => model.monatsStunden, (IEnumerable<SelectListItem>)ViewData["MonatsStunden"])
    @Html.TextBoxFor(model => model.Name)

      <input type="submit" value="Filtern" />
}